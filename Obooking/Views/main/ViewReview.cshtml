@model IEnumerable<Obooking.Models.ReviewVM>

@{Layout = "~/Views/Shared/_Layout.cshtml";}

<div class="contain">

    <ul style="margin-top:60px;">
        @foreach (var item in Model)
        {
            <li>
                <span class="name">UserName: </span>
                <span>@Html.DisplayFor(modelItem => item.user.username)</span>

                <span>@Html.DisplayFor(modelItem => item.book.BookName)</span>

                <span>@Html.DisplayFor(modelItem => item.review.Review_content)</span>
            </li>
        }
    </ul>

    <input onclick="location.href = '@Url.Action("Showmain", "main")'" type="submit" name="" value="Back" />
</div>



<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
    }

    body {
        margin: 0;
        padding: 0;
        background: #3498db;
        font-family: sans-serif;
    }

    .contain {
        margin: 0;
        padding: 0;
        background: #3498db;
        font-family: sans-serif;
    }

    h6 {
        margin-left: 350px;
        color: white;
        font-family: 'Lucida Sans Typewriter';
        font-weight: 200;
        font-size: 2em;
    }

        h6 span {
            color: red;
            font-family: 'Lucida Sans Typewriter';
            font-weight: 500;
        }

    .contain ul {
        position: relative;
        width: 600px;
        margin: 20px auto 0;
        padding: 20px;
        padding-top: -15px;
        padding-bottom: -15px;
        box-sizing: border-box;
        background: rgba(0,0,0,0.1);
        box-shadow: inset 0 0px 40px rgba(0,0,0,0.2);
    }

        .contain ul li {
            display: flex;
            background: rgba(255,255,255,0.1);
            padding: 10px 20px;
            color: #fff;
            margin: 5px;
            transition: 0.5s;
        }

            .contain ul li:nth-child(1) {
                background: rgba(255,255,255,0.6);
            }

            .contain ul li:nth-child(2) {
                background: rgba(255,255,255,0.45);
            }

            .contain ul li:nth-child(3) {
                background: rgba(255,255,255,0.3);
            }

            .contain ul li:nth-child(4) {
                background: rgba(255,255,255,0.15);
            }

            .contain ul li span:nth-child(1) {
                width: 30px;
            }

            .contain ul li span:nth-child(2) {
                width: 200px;
                margin-left: 60px;
            }

            .contain ul li span:nth-child(3) {
                width: 150px;
            }

            .contain ul li span:nth-child(4) {
                width: 150px;
                text-align: right;
            }


            .contain ul li:hover {
                transform: scale(1.06);
                background: #ff3772;
            }

    .contain button {
        display: flex;
        padding: 10px 30px;
        border-radius: 5px;
        margin-left: 50px;
        border: none;
        outline: none;
        font-size: 1em;
        font-weight: 500;
        background-color: #2ecc71;
        color: #fff;
        cursor: pointer;
    }

    .contain input[type = "submit"] {
        border: 0;
        background: none;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #a628dc;
        padding: 14px 40px;
        outline: none;
        color: white;
        border-radius: 10px;
        transition: 0.25s;
        cursor: pointer;
    }

        .contain input[type = "submit"]:hover {
            background: #ad2846;
        }
</style>